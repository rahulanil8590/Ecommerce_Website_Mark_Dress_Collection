<!-- View OrderProduct -->
<%- include('../layouts/Admin/header.ejs') %><!-- Admin Header -->
    <%- include('../partial/admin_header.ejs') %><!-- admin navbar -->
    <%- include('../partial/admin_side.ejs',{isadmin:Isadmin}) %><!-- Admin Side Bar -->
            <div class="clearfix"></div>

            <div class="content-wrapper">
                <div class="container-fluid">
                    <div class="content-wrapper">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">OrderProduct</h5>
                                            <div class="table-responsive">
                                                <div class="col-lg-12">
                                                    <div class="card">
                                                        <div class="card-body">
                                                            <h5 class="card-title">All Details</h5>
                                                            <div class="table-responsive">
                                                                <table class="table">
                                                                    <thead>
                                                                        <tr>
                                                                            <th scope="col">No</th>
                                                                            <th scope="col">Product Name</th>
                                                                            <th scope="col">Image</th>
                                                                            <th scope="col">Price</th>
                                                                            <th scope="col">quantity</th>
                                                                            <th scope="col">Size</th>
                                                                            <th scope="col">Color</th>

                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <% for( X of OrderedProducts )    { %>
                                                                            <tr>
                                                                                <th scope="row">1</th>
                                                                                <td>
                                                                                    <%=X.product.name%>
                                                                                </td>
                                                                                <td>
                                                                                    <img src="/images/Product_image/<%=X.product.images[0]%>" alt="" style="width: 100px; height:100px ;">
                                                                                </td>
                                                                                <td>
                                                                                    <%=X.product.price%>
                                                                                </td>
                                                                                
                                                                                <td>
                                                                                    <%=X.quantity%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=X.Size%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=X.color%>
                                                                                </td>
                                                                                
                                                                            </tr>

                                                                            <% } %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div><!--End Row-->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('../layouts/Admin/Color_switcher.ejs') %> <!-- color switcher Backgroung -->
                <%- include('../layouts/Admin/footer.ejs') %> <!-- Footer Section of Admin Including -->