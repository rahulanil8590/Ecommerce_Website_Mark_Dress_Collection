<!-- View Category -->
<%- include('../layouts/Admin/header.ejs') %><!-- Admin Header -->
    <%- include('../partial/admin_header.ejs') %><!-- admin navbar -->
        <%- include('../partial/admin_side.ejs') %><!-- Admin Side Bar -->
            <div class="clearfix"></div>

            <div class="content-wrapper">
                <div class="container-fluid">
                    <div class="content-wrapper">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Product</h5>
                                            <div class="table-responsive">
                                                <div class="col-lg-12">
                                                    <div class="card">
                                                        <div class="card-body">
                                                            <h5 class="card-title">All Details</h5>
                                                            <div class="table-responsive">
                                                                <table class="table">
                                                                    <thead>
                                                                        <tr>
                                                                            <th scope="col">No</th>
                                                                            <th scope="col">Product Name</th>
                                                                            <th scope="col">Description</th>
                                                                            <th scope="col">richDescription</th>
                                                                            <th scope="col">Image</th>
                                                                            <th scope="col">Price</th>
                                                                            <th scope="col">Brand</th>
                                                                            <th scope="col">Category</th>
                                                                            <th scope="col">Sub_Category </th>
                                                                            <th scope="col">CountInstock</th>
                                                                            <th scope="col">Rating</th>
                                                                            <th scope="col">Review</th>
                                                                            <th scope="col">Isfeature</th>
                                                                            <th scope="col">Created Date</th>
                                                                            <th scope="col">option</th>

                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <% data.forEach(function(item) { %>
                                                                            <tr>
                                                                                <th scope="row">1</th>
                                                                                <td>
                                                                                    <%=item.name%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.description%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.richdescription%>
                                                                                </td>
                                                                                <td>
                                                                                   <a href="/admin/Edit_image1/<%=item._id%>"><img  style="width: 100px; height:100px ;" src="/images/Product_image/<%=item.images[0]%>" alt="">
                                                                                   </a> 
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.price%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.brand%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.category%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item. product_Category%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.countInStock%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.rating%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.numReview%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.isFeatured%>
                                                                                </td>
                                                                                <td>
                                                                                    <%=item.dateCreated%>
                                                                                </td>

                                                                                <td><a href="/admin/delete_Sub_Category/<%=item._id%>"
                                                                                        class="btn  btn-danger"
                                                                                        onclick="return confirm('  you want Delete this Sub_Category ?')">Delete</a>
                                                                                </td>
                                                                            </tr>

                                                                            <% }); %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div><!--End Row-->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('../layouts/Admin/Color_switcher.ejs') %> <!-- color switcher Backgroung -->
                <%- include('../layouts/Admin/footer.ejs') %> <!-- Footer Section of Admin Including -->